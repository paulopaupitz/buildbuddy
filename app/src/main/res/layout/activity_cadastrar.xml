<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastrar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_voltarP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_rname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:hint="Nome"
            android:textColorHint="@color/c5"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_rlogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:hint="Login"
            android:textColorHint="@color/c5"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_remail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:hint="Email"
            android:textColorHint="@color/c5"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_novaSenha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Senha"
            android:textColorHint="@color/c5"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="20dp"
            android:inputType="text|textPassword" />

        <EditText
            android:id="@+id/et_RnovaSenha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirme a senha"
            android:textColorHint="@color/c5"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="20dp"
            android:inputType="text|textPassword" />

        <Button
            android:id="@+id/bt_recadastro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="0dp"
            android:text="CADASTRAR"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_bold"
            android:backgroundTint="@color/p4"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>