<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Valores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_volta"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/back_button"
                android:drawableLeft="@drawable/round_arrow_back_24"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <TextView
                android:layout_gravity="start"
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="10dp"
                android:text="OrÃ§amento"
                android:textColor="@color/p4"
                android:textSize="24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_valores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor: "
            android:textAlignment="center"
            android:textSize="24dp"
            android:textColor="@color/c6"
            android:fontFamily="@font/roboto_regular"/>

        <SeekBar
            android:id="@+id/sb_valor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:max="7000"
            android:progress="5" />

        <Button
            android:id="@+id/bt_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="0dp"
            android:text="continuar"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_bold"
            android:backgroundTint="@color/p4"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>